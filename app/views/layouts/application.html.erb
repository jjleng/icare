<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= yield :head %>
  <%= yield :scripts %>
  <%= render 'layouts/stylesheets' %>

</head>

<body style="background-color: #eee">
<!-- html5 -->
<header>
  <div class="topbar">
    <div class="fill">
      <div class="container">
        <%= render 'layouts/header' %>
      </div>
    </div>
  </div>

</header>

<section>
  <div class="container">
    <div class="content">
      <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
      <% end %>
      <div class="row">
        <div class="span9">
          <%= yield %>
        </div>
        <div class="span5"></div>

      </div>
    </div>
    <footer>
        <p>&copy; Company 2011</p>

      </footer>
  </div>


</section>


</body>
</html>
